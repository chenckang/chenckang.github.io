.pagination
  width main-width
  margin auto
  padding .5em 0
  text-align right
  font-size 0
  color #ccc

  a,span
    font-size 12px
    display inline-block
    padding .2em .5em
    margin .5em 0 0 0
    text-decoration none
    line-height 20px
    color #999
    border 1px solid #eee

  a:active
    color #333
